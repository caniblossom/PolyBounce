#version 150                                                 
                                                            
uniform vec3 lightPosition;                                 
uniform vec3 lightColor;                                    
                                                            
in vec3 position;                                           
in vec3 color;                                              
in vec3 normal;                                             
                                                            
out vec4 colorOut;                                           
                                                            
void main() {                                               
    vec3 lightDir = normalize(lightPosition - position);    
    float alpha = clamp(dot(lightDir, normal), 0.0, 1.0);   
                                                            
    colorOut = vec4(alpha * lightColor * color, 1.0);       
}                                                             
